<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Smart To Do List</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/custom.css" rel="stylesheet">
</head>
<body>
  <header class="header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <h1 class="navbar-brand">Smart To Do List</h1>
        <div class="nav ml-auto">
          <a class="nav-link" href="/">Home</a>
          <a class="nav-link" href="/post">Add New</a>
          <button class="btn btn-secondary">User</button>
        </div>
      </div>
    </nav>
  </header>

  <main class="main">
    <section class="form-container">
      <form action="/todos" method="POST" class="form-inline">
        <div class="input-group">
          <input type="text" id="title" name="title" class="form-control" placeholder="Enter tasks to do here..." required>
          <select name="category" class="form-control">
            <option value="movies">Movies</option>
            <option value="books">Books</option>
            <option value="food">Food</option>
            <option value="products">Products</option>
          </select>
          <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Add Task</button>
          </div>
        </div>
      </form>
    </section>

    <section class="container">
      <% for (let category in todos.categories) { %>
        <div class="box-wrapper">
          <div class="box">
            <h3><%= category.charAt(0).toUpperCase() + category.slice(1) %></h3>
            <ul class="list-group">
              <% if (todos.categories[category] && todos.categories[category].length > 0) { %>
                <% todos.categories[category].forEach((todo, index) => { %>
                  <li class="list-group-item">
                    <span>- <%= todo %></span>
                    <div class="actions">
                      <a href="/todos/<%= category %>/<%= index %>/edit" class="badge badge-success">E</a>
                      <a href="/todos/<%= category %>/<%= index %>" class="badge badge-warning">S</a>
                      <a href="/todos/<%= category %>/<%= index %>/delete" class="badge badge-danger">D</a>
                    </div>
                  </li>
                <% }); %>
              <% } %>
            </ul>
          </div>
        </div>
      <% } %>
    </section>
  </main>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
